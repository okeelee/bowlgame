!!!
%html
  %head
    %title Bowlgame
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body.body
    #header.topbar
      .fill
        .container
          %span.brand
            = link_to @pickem.name, root_path
          %ul.nav
            %li
              = link_to 'Bowl Games', bowl_games_path 
            - if user_signed_in?
              %li
                = link_to 'Your Picks', user_picks_path(current_user.username) 
            = render 'shared/registration_items'
            = render 'shared/login_items'
    #page.container
      .notice
        = notice
      .alert
        = alert
      = yield
    #footer